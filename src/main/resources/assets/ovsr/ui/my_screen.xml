<!-- assets/ovsr/ui/my_screen.xml -->
<overseer-ui>
    <components>
        <flow-layout direction="vertical">
            <children>
                <label>
                    <text>Hello, World!</text>
                    <color>#FFFFFF</color>
                </label>
                <button>
                    <text>Click Me!</text>
                    <width>100</width>
                    <height>20</height>
                </button>
            </children>
            <padding>10</padding>
            <gap>5</gap>
        </flow-layout>
    </components>

    <templates>
        <template name="button-group">
            <flow-layout direction="horizontal">
                <children>
                    <button>
                        <text>{{button1-text}}</text>
                    </button>
                    <button>
                        <text>{{button2-text}}</text>
                    </button>
                </children>
                <gap>5</gap>
            </flow-layout>
        </template>
    </templates>
</overseer-ui>
